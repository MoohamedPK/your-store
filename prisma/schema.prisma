generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String // store Cloudinary URL here
  order       Int
  sizes       Size[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Size {
  id      Int          @id @default(autoincrement())
  name    ProductSizes
  price   Float
  product Product      @relation(fields: [sizeId], references: [id])
  sizeId  Int
}

enum ProductSizes {
  SAMLL
  MEDIUM
  LARGE
}
